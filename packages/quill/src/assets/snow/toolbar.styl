.ql-toolbar {
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 1;
}
.ql-snow.ql-toolbar button,
.ql-snow .ql-toolbar button {
  position: relative;
  width: 32px;
  height: 32px;
  background: rgba(239,239,239,0.4);
  padding: 10px;
  border-radius: 4px;
  font-size: 10px;
  cursor: pointer;
  border: none;
}

.ql-snow.ql-toolbar button:hover:after {
  opacity: 1;
  transition: all 0.1s ease 0.5s;
  visibility: visible;
}
.ql-snow.ql-toolbar button:after {
  opacity: 0;
/*  content: attr(data-title);*/
  content: '添加链接 (⌘+K)';
  word-break: break-word;
  background-color: rgba(80, 79, 79, .8);
  color: #fff;
  font-size:  10px;
  position:  absolute;
  left: 50%;
  transform: translateX(-50%) scale(.9);
  top: -30px;
  white-space: nowrap;
  padding: 5px 3px;
  border-radius: 4px;
}

.ql-container.ql-snow {
  height: 120px;
  width: 428px;
}

.ql-snow {
  border: none !important;
}

