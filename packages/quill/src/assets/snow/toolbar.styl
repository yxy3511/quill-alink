.ql-toolbar.ql-snow {
/*  border: 1px solid #ccc;*/
  box-sizing: border-box;
  font-family: 'Helvetica Neue', 'Helvetica', 'Arial', sans-serif;
  padding: 8px;
}
.ql-toolbar.ql-snow .ql-formats {
  margin-right: 15px;
}
.ql-toolbar.ql-snow .ql-picker-label {
  border: 1px solid transparent;
}
.ql-toolbar.ql-snow .ql-picker-options {
  border: 1px solid transparent;
  box-shadow: rgba(0,0,0,0.2) 0 2px 8px;
}
.ql-toolbar.ql-snow .ql-picker.ql-expanded .ql-picker-label {
  border-color: #ccc;
}
.ql-toolbar.ql-snow .ql-picker.ql-expanded .ql-picker-options {
  border-color: #ccc;
}
.ql-toolbar.ql-snow .ql-color-picker .ql-picker-item.ql-selected,
.ql-toolbar.ql-snow .ql-color-picker .ql-picker-item:hover {
  border-color: #000;
}
.ql-toolbar.ql-snow + .ql-container.ql-snow {
  border-top: 0px;
}

.ql-snow .ql-tooltip .ql-toolbar-row {
  display: flex;
  justify-content: space-between;
  width: 350px;
  height: 40px;
  padding: 5px 10px;
}
.ql-snow .ql-tooltip .ql-toolbar-row a {
  color: #252525;
}
.ql-snow .ql-tooltip .ql-toolbar-row a.ql-preview {
  flex: 1;
  text-align: left;
  text-overflow: ellipsis;
  line-height: 30px;
}
.ql-snow .ql-tooltip .ql-toolbar-row .ql-btns a {
  display: inline-flex;
  width: 32px;
  height: 32px;
  background: rgba(239,239,239,0.4);
  border-radius: 4px;
  margin-right: 5px;
  justify-content: center;
  align-items: center;
/*  color: #252525;*/
}
.ql-snow .ql-tooltip .ql-toolbar-row .ql-btns a i {
  font-size: 10px;
}
.ql-snow .ql-tooltip .ql-toolbar-row .ql-btns a:last-child {
  margin-right: 0;
}

.ql-snow .ql-tooltip.ql-editing .ql-toolbar-row {
  display: none;
}

