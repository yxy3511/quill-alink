.ql-snow .ql-tooltip.ql-editing {
  text-align:  left;
  width: 400px;
  height: 94px;
  padding: 10px;
}
.ql-snow .ql-tooltip.ql-editing:not(.ql-hidden) {
  display: block;
}
.ql-snow .ql-tooltip.ql-editing button {
  display: inline-block;
  width: 56px;
  height: 32px;
  background: #1890FF;
  color: #fff;
  border: none;
  border-radius: 2px;
  letter-spacing: 4;
  margin-left: 10px;
  font-size: 14px;
}
.ql-snow .ql-tooltip a {
  line-height: 26px;
}
/*.ql-snow .ql-tooltip.ql-editing a.ql-preview,
.ql-snow .ql-tooltip.ql-editing a.ql-action,
.ql-snow .ql-tooltip.ql-editing a.ql-viewlink,
.ql-snow .ql-tooltip.ql-editing a.ql-remove {
  display: none;
}*/
.ql-snow .ql-tooltip.ql-editing .ql-toolbar-row {
  display: none;
}
/*.ql-snow .ql-tooltip.ql-editing input[type=text] {*/
.ql-snow .ql-tooltip.ql-editing div.input-row.row-text {
  display: block;
}
.ql-snow .ql-tooltip.ql-editing div.input-row {
  display: inline-block;
/*  width: 305px;*/
  height: 32px;
  margin-bottom: 10px;
}
.ql-snow .ql-tooltip.ql-editing div.input-row:last-child {
  margin-bottom: 0px;
}
.ql-snow .ql-tooltip.ql-editing div.input-row input {
  width: 260px;
  height: 32px;
  background: #FFFFFF;
  border-radius: 4px;
  border: 1px solid rgba(0,0,0,0.15);
  padding: 5px 12px;
  outline-style: none;
}
.ql-snow .ql-tooltip.ql-editing div.input-row input::placeholder {
  color: rgba(0,0,0,0.25);
  font-size: 14px;
}
.ql-snow .ql-tooltip.ql-editing div.input-row input:focus-visible {
  border: 1px solid #1890FF;
}


