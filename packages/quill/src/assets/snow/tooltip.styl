tooltipMargin = 8px

.ql-container.ql-disabled .ql-tooltip {
  visibility: hidden;
}

.ql-snow .ql-tooltip {
  position: absolute;
  transform: translateY(10px);
}
.ql-snow .ql-tooltip a {
  cursor: pointer;
  text-decoration: none;
}
.ql-snow .ql-tooltip.ql-flip {
  transform: translateY(-10px);
}

.ql-snow .ql-tooltip {
  background-color: #fff;
/*  border: 1px solid #ccc;*/
  box-shadow: 0px 0px 5px #ddd;
  color: #252525;
  padding: 5px 12px;
  white-space: nowrap;
  box-shadow: 0px 2px 8px 0px rgba(0,0,0,0.15);
  z-index: 2;
}
.ql-snow .ql-tooltip .ql-toolbar-row {
  display: flex;
  justify-content: space-between;
  width: 350px;
  height: 40px;
  padding: 5px 10px;
}

.ql-snow .ql-editor a {
  text-decoration: none;
}

.ql-snow .ql-tooltip .ql-toolbar-row a {
  color: #252525;
}
.ql-snow .ql-tooltip .ql-toolbar-row a.ql-preview {
  flex: 1;
  text-align: left;
  text-overflow: ellipsis;
  line-height: 30px;
}
.ql-snow .ql-tooltip .ql-toolbar-row .ql-btns a {
  display: inline-flex;
  width: 32px;
  height: 32px;
  background: rgba(239,239,239,0.4);
  border-radius: 4px;
  margin-right: 5px;
  justify-content: center;
  align-items: center;
/*  color: #252525;*/
}
.ql-snow .ql-tooltip .ql-toolbar-row .ql-btns a i {
  font-size: 10px;
}
.ql-snow .ql-tooltip .ql-toolbar-row .ql-btns a:last-child {
  margin-right: 0;
}
/*.ql-snow .ql-tooltip::before {
  content: "Visit URL:";
  line-height: 26px;
  margin-right: 8px;
}*/
.ql-snow .ql-tooltip button {
  display: none;
}
/*.ql-snow .ql-tooltip input[type=text] {*/
.ql-snow .ql-tooltip div.input-row {
  display: none;
/*  border: 1px solid #ccc;*/
  font-size: 13px;
  height: 26px;
  margin: 0px;
  padding: 3px 5px;
/*  width: 170px;*/
}
.ql-snow .ql-tooltip a.ql-preview {
  display: inline-block;
  max-width: 200px;
  overflow-x: hidden;
  text-overflow: ellipsis;
  vertical-align: top;
}
